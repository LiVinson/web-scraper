<nav class="navbar">
    <a class="navbar-brand" href="/">reddit r/WorldNews Scraper</a>

</nav>

<div class="container-fluid">
    <div class="row full_article_row">
        <div class="card col-sm-7 one-article-panel">
            <div class="card-header">
                <h1>r/WorldNews Top Headlines</h1>
            </div>
            <div class="card-body iframe-parent">
                <iframe class="display_article" src={{link}}></iframe>
            </div>

        </div>

        <div class="card col-sm-4 notes-column ml-auto">
            <div class="card-header">
                <h3>Article Notes</h3>
            </div>
            <form>
                {{title}}
                <div class="form-group">
                    <label for="username">Username
                        <i>optional</i>
                    </label>
                    <input class="form-control" id="username" placeholder="JaneDoe123">
                </div>

                <div class="form-group">
                    <label for="note-title">Note Title</label>
                    <input class="form-control" id="note-title" placeholder="Questions about the article...">
                </div>

                <div class="form-group">
                    <label for="note-text">Article Notes</label>
                    <textarea class="form-control a" id="note-text" rows="5"></textarea>
                </div>

                <button type="submit" class="btn btn-primary mb-2" id="add-note-btn" data-id={{_id}}>Add Note</button>

            </form>

        </div>

    </div>
    {{!-- End Row --}}

    <div class="row justify-content-md-center">
        <div class="card col-sm-11 comment-card">
            <div class="card-header">
                <h3>Comments</h3>
            </div>
            {{#if notes}}
            <div>
                {{#each notes}}
                <div class="comment-div">
                    <p>{{this.username}}</p>
                    <p>{{this.title}}</p>
                    <p>{{this.text}}</p>

                    <button type="submit" class="btn btn-primary mb-2 delete-note" data-id={{this._id}}>Delete Note</button>

                </div>

                {{/each }}
            </div>
            {{/if}}
             {{#unless notes}}
            <p>Be the First to Add A Note ...</p>

            {{/unless}}


        </div>

    </div>
</div>
{{!-- end container --}}