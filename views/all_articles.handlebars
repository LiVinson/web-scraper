<nav class="navbar navbar-light bg-light">
    <a class="navbar-brand" href="/articles">Reddit r/WorldNews Scraper</a>
    <button class="btn btn-outline-success my-2 my-sm-0" id="scrape" type="submit">Scrape New Articles</button>
    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>

</nav>

<div class="container">
    <div class="row">
        <div class="card col-xs-12 article-panel">
            <div class="card-header">
                <h1>r/WorldNews Tops Headlines</h1>
            </div>
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    {{#each article}}
                    <li class="list-group-item">{{this.title}}
                        <br> Source: {{this.source}}
                        <br>
                        <a href="/articles/{{this._id}}" id={{this._id}} class="btn btn-primary full_article">View Full Article</a>
                        <a href="#" class="btn btn-primary">Add a Comment</a>
                    </li>
                    {{/each}}
                </ul>
            </div>

        </div>

        {{!-- <div class="col-xs-4">
            Notes will go here
        </div> --}}

    </div>
</div>